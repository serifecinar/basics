@{
}
@model List<Course>

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" media="all" />
    <title></title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="#">CourseApp</a>
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a href="#" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Kurslar</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        <main>


            @foreach (var kurs in Model)
            {
            <div class="card mb-3" id="kurs_@kurs.Id">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/img/@kurs.Image" class="img-fluid rounded-start" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                                <h5 class="card-title">@kurs.Title</h5>
                                <p class="card-text">@kurs.Description</p>
                        </div>
                    </div>
                </div>
            </div>
            }

        </main>
    </div>



    <h1>Course List</h1>



</body>
</html>